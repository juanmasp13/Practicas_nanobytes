<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="partner_risk_exceeded_wizard_inherit" model="ir.ui.view">
        <field name="name">Partner risk exceeded inherit</field>
        <field name="model">partner.risk.exceeded.wiz</field>
        <field name="inherit_id" ref="account_financial_risk.partner_risk_exceeded_wizard"/>
        <field name="arch" type="xml">
            <xpath expr="//footer/button[@class='btn-primary']" position="replace">
                <field name="mostrar_boton" invisible="1"/>
                <button
                    string="Continue"
                    class="btn-primary"
                    name="button_continue"
                    type="object"
                    attrs="{'invisible': ['mostrar_boton', '!=', True]}"
                />
            </xpath>
        </field>
    </record>
</odoo>