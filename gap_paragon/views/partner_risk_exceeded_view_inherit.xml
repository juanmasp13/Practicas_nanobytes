<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="partner_risk_exceeded_wizard_inherit" model="ir.ui.view">
        <field name="name">Partner risk exceeded inherit</field>
        <field name="model">partner.risk.exceeded.wiz</field>
        <field name="inherit_id" ref="account_financial_risk.partner_risk_exceeded_wizard"/>
        <field name="arch" type="xml">
            <xpath expr="//footer/button[@class='btn-primary']" position="replace">
                <t t-if="context.get('active_model') == 'sale.order'">
                    <button
                        string="Continue Sale Order"
                        class="btn-primary"
                        name="button_continue"
                        type="object"
                    />
                </t>
                <t t-else="">
                    <button
                        string="Continue sin sale order"
                        class="btn-primary"
                        name="button_continue"
                        type="object"
                        groups="account_financial_risk.group_overpass_partner_risk_exception"
                    />
                </t>
            </xpath>
        </field>
    </record>
</odoo>