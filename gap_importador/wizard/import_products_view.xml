<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_import_products_form" model="ir.ui.view">
        <field name="name">import.products.wizard.form</field>
        <field name="model">import.products.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar productos">
                <group>
                    <field name="category_id"/>
                    <field name="fichero"/>
                    <field name="descatalogar"/>
                    <field name="log_importacion"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    <button type="object" class="btn btn-primary" name="registrar_productos" close_on_click="False">Importar</button>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_products" model="ir.actions.act_window">
        <field name="name">Importar productos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">import.products.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_import_products_form"/>
        <field name="target">new</field>
    </record>  

</odoo>